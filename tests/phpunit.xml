<phpunit bootstrap="./bootstrap.php">
    <testsuite name="Application Test Suite">
        <directory>../src/lib/application</directory>
    </testsuite>
    <testsuite name="Library Test Suite">
        <directory>../src/lib/library</directory>
    </testsuite>
    <filter>
        <!-- If Zend Framework is inside your project's library, uncomment this filter -->
        <whitelist>
            <directory suffix=".php">../src/lib/library/Zend</directory>
        </whitelist>
    </filter>
</phpunit>

